<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Stealth Proxy</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f9f9f9;
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 50px;
    }
    h1 {
      font-size: 24px;
    }
    input {
      padding: 10px;
      font-size: 16px;
      width: 60%;
      margin-bottom: 10px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
    }
    iframe {
      margin-top: 20px;
      width: 90%;
      height: 600px;
      border: none;
    }
  </style>
</head>
<body>
  <h1>Proxy Access</h1>
  <p>Enter a URL to visit through proxy:</p>
  <input id="site" type="text" placeholder="example.com" />
  <button onclick="openProxy()">Go</button>
  <iframe id="frame" style="display: none;"></iframe>

  <script>
    const encoder = {
      encode: function(str) {
        return btoa([...str].map(c => String.fromCharCode(c.charCodeAt(0) ^ 2)).join(''));
      }
    };

    function openProxy() {
      let url = document.getElementById("site").value.trim();
      if (!url.startsWith("http")) {
        url = "https://" + url;
      }
      const encoded = encoder.encode(url);
      const fullUrl = "https://uv.bare.network/service/" + encoded;

      const frame = document.getElementById("frame");
      frame.src = fullUrl;
      frame.style.display = "block";
    }
  </script>
</body>
</html>
